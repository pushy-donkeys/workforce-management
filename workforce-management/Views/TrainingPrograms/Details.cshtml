@model workforceManagement.Models.ViewModels.TrainingProgramViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>TrainingProgram</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TrainProg.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrainProg.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrainProg.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrainProg.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrainProg.EndDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrainProg.EndDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrainProg.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrainProg.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrainProg.MaxAttendees)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrainProg.MaxAttendees)
        </dd>
        <dt>
            @Html.LabelFor(model => model.TrainProg.TrainingPrgEmp, "Employee")        
        </dt>
        <dd>
        <!---- Adding an IF statement with a message to display if there are no Employees attending a program -->
        @if (Model.TrainProg.TrainingPrgEmp.Count == 0)
        {
            <span>There are currently no Employees attending this training program.</span>
        }
        @foreach(var x in Model.TrainProg.TrainingPrgEmp)
        {
            @x.Employee.Firstname @x.Employee.Lastname;
        }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TrainProg.TrainingProgramId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
